source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'
use_frameworks!

# iOS pods
def ios_pods
  pod 'MagicalRecord'
  pod 'DrawerController'
  pod 'Alamofire'
  pod 'AlamofireImage'
  pod 'Cosmos', '11.0.3'
  pod 'Google/Analytics'
  pod 'apptentive-ios'
  pod 'GoogleAds-IMA-iOS-SDK'
  pod 'SSKeychain'
  pod 'MarqueeLabel/Swift'
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'FacebookCore'
  pod 'FacebookLogin'
  pod 'Google/SignIn'
  pod 'AppsFlyerFramework'
  pod 'UrbanAirship-iOS-SDK'
  pod 'google-cast-sdk', '3.5.0'
  pod 'Firebase/Core'
  pod 'GoogleTagManager'
  pod 'KMSDK', '~> 2.2.7'
  pod 'WebViewJavascriptBridge', :git => 'https://github.com/Kiswe/WebViewJavascriptBridge.git', :commit => '80a3598c8e95d501f9cf2baeee37736f0a8d6154'
  pod 'Google-Mobile-Ads-SDK'
end

# Hoichoi target pod
target 'Hoichoi_iOS' do
    ios_pods
end

