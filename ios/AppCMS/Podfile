# Apple TV pods
def appletv_pods
    platform :tvos, '9.0'
    pod 'Alamofire'
    pod 'AlamofireImage'
    pod 'SSKeychain'
    pod 'ParallaxView'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'MarqueeLabel/Swift'
    pod 'Cosmos'
end


# AppCMS AppleTV target pod
